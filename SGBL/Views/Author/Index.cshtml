@using SGBL.Core.Application.ViewModels.Author;
@model List<AuthorViewModel>
@{
    ViewData["Title"] = "Autores";
}


<style>
    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px 40px;
    }

    .welcome-section {
        background: white;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border-left: 4px solid #007bff;
    }

        .welcome-section h2 {
            color: #0a2a63;
            font-size: 24px;
            margin: 0 0 10px 0;
            font-weight: 600;
        }

        .welcome-section p {
            color: #5a6c7d;
            font-size: 16px;
            margin: 0;
            line-height: 1.5;
        }
</style>


<!-- Bienvenido -->
<div class="dashboard-container">
    <div class="welcome-section">
        <h2><i class="fas fa-home" style="color: #007bff; margin-right: 10px;"></i>Creacion de nuevos Autores</h2>
        <p>Aquí tienes un resumen completo de tus autores creados, puedes crear mas cuando quieras.</p>
    </div>


<div class="container-fluid mt-4">

    <div class="row mb-4">
        <div class="col text-end">
            <a asp-controller="Author" asp-action="Create" class="btn btn-success btn-lg shadow">+ Crear nuevo autor</a>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <h2 class="text-center text-muted">No hay Autores registrados</h2>
    }
    else
    {
        <div class="row g-4">
            @foreach (AuthorViewModel item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden h-100">

                        <!-- Imagen del autor -->
                        <img src="@item.ImageUrl" alt="@item.Name"
                             class="card-img-top img-fluid"
                             style="height: 250px; object-fit: cover;" />

                        <div class="card-body text-center bg-light">
                            <h5 class="card-title fw-bold mb-2">@item.Name</h5>
                            <span class="badge bg-primary mb-3">Libros: @item.LibrosQuantity</span>

                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <a asp-controller="Author" asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-info">Editar</a>
                                <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger">Borrar</a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>
