@using SGBL.Core.Application.ViewModels.Genero;
@model List<GeneroViewModel>

@{
    ViewData["Title"] = "Géneros";
}

<div class="container mt-5">

    <!-- Encabezado -->
    <div class="row mb-4 align-items-center">
        <div class="col-12 col-md-6 text-center text-md-start mb-3 mb-md-0">
            <h2 class="fw-bold text-primary">🎭 Lista de Géneros</h2>
        </div>
        <div class="col-12 col-md-6 text-center text-md-end">
            <a asp-controller="Genero" asp-action="Create" class="btn btn-success btn-lg px-4 shadow-sm">
                <i class="bi bi-plus-circle me-2"></i> Crear nuevo género
            </a>
        </div>
    </div>

    <!-- Listado -->
    <div class="row g-4">

        @if (Model == null || Model.Count == 0)
        {
            <div class="col-12 text-center mt-5">
                <div class="bg-light p-5 rounded-4 shadow-sm">
                    <h4 class="text-muted">No hay géneros creados todavía</h4>
                    <i class="bi bi-emoji-frown fs-1 text-muted mt-2"></i>
                </div>
            </div>
        }
        else
        {
            @foreach (GeneroViewModel item in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card border-0 shadow-lg rounded-4 hover-lift transition-all p-3">

                        <div class="card-body text-center">


                            <!-- Imagen circular más grande y sin bordes azules -->
                            <div class="mx-auto d-flex align-items-center justify-content-center" style="width: 190px; height: 190px; overflow: hidden; border-radius: 50%;">
                                <img src="@item.ImageUrl"
                                     alt="@item.Name"
                                     class="img-fluid rounded-circle"
                                     style="width: 100%; height: 100%; object-fit: cover;" />
                            </div>


                            

                            <!-- Nombre del género -->
                            <h5 class="card-title fw-bold mb-3">@item.Name</h5>

                            <!-- Botones de acción -->
                            <div class="d-flex justify-content-center gap-3">
                                <a asp-controller="Genero" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm px-4 shadow-sm">
                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                </a>
                                <a asp-controller="Genero" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm px-4 shadow-sm">
                                    <i class="bi bi-trash3 me-1"></i> Borrar
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }

    </div>

</div>

<!-- Estilos extra para animación hover -->
<style>
    .hover-lift {
        transition: all 0.3s ease-in-out;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.1);
        }
</style>
