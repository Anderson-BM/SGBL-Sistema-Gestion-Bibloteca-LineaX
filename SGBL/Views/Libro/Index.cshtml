@using SGBL.Core.Application.ViewModels.Libro;
@model List<LibroViewModel>

@{
    ViewData["Title"] = "Libros";
}

<div class="container my-4">

    <!-- Título y botón -->
    <div class="row mb-4">
        <div class="col-12 text-end">
            <a asp-controller="Libro" asp-action="Create" class="btn btn-success btn-lg shadow">+ Crear Nuevo Libro</a>
        </div>
    </div>

    <!-- Listado -->
    <div class="row g-4">
        @if (Model == null || Model.Count == 0)
        {
            <div class="col-12 text-center text-muted">
                <h4>No hay Libros</h4>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden w-100">

                        <!-- Imagen del libro -->
                        <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@item.Name" />

                        <!-- Cuerpo -->
                        <div class="card-body d-flex flex-column justify-content-between p-4">
                            <div>
                                <h5 class="card-title fw-bold mb-2">@item.Name</h5>
                                <p class="text-muted mb-1"><small>por @item.AuthorName</small></p>
                                <p class="card-text mb-3">@item.Descrition</p>
                                <span class="badge bg-secondary">@item.GeneroName</span>
                            </div>

                            <!-- Botones -->
                            <div class="d-flex justify-content-between mt-3">
                                <a asp-controller="Libro" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm flex-fill me-2 shadow-sm">Editar</a>
                                <a asp-controller="Libro" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm flex-fill shadow-sm">Borrar</a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>
