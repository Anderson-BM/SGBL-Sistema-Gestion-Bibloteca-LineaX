@using SGBL.Core.Application.ViewModels.User
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .tech-login-container {
        background: white;
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .image-section {
        background: linear-gradient(45deg, rgba(0,0,0,0.1), rgba(255,255,255,0.1));
        backdrop-filter: blur(10px);
        border-radius: 20px;
        margin: 20px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    }

    .login-section {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(20px);
        border-radius: 25px;
        margin: 40px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        border: 1px solid rgba(255,255,255,0.3);
    }

    .login-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #22c55e, #16a34a);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 2rem;
    }

    .form-control-modern {
        border: 2px solid #e0e6ed;
        border-radius: 15px;
        padding: 15px 20px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        background: rgba(255,255,255,0.9);
    }

        .form-control-modern:focus {
            border-color: #22c55e;
            box-shadow: 0 0 0 0.2rem rgba(34, 197, 94, 0.25);
            transform: translateY(-2px);
        }

    .btn-modern {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        border: none;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-primary-modern {
        background: linear-gradient(135deg, #22c55e, #16a34a);
        color: white;
    }

        .btn-primary-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(34, 197, 94, 0.4);
        }

    .btn-warning-modern {
        background: linear-gradient(135deg, #eab308, #f59e0b);
        color: white;
    }

        .btn-warning-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(245, 158, 11, 0.4);
        }

    .form-label-modern {
        font-weight: 600;
        color: #4a5568;
        font-size: 1.1rem;
        margin-bottom: 8px;
    }

    .alert-modern {
        border-radius: 15px;
        border: none;
        padding: 15px 20px;
        margin-bottom: 25px;
    }

    .tech-glow {
        position: relative;
        overflow: hidden;
    }

        .tech-glow::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
            animation: shine 3s infinite;
        }

 /*    keyframes shine {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    } */

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(34, 197, 94, 0.3), rgba(22, 163, 74, 0.3));
        mix-blend-mode: multiply;
    }
</style>

<div class="tech-login-container">
    <div class="row h-100 align-items-center">
        <!-- Lado izquierdo: Imagen -->
        <div class="col-lg-6 d-none d-lg-block">
            <div class="image-section tech-glow" style="height: 80vh; position: relative;">
                <img src="https://media.istockphoto.com/id/1161792628/es/foto/estudiante-feliz-con-la-tableta-interactuando-con-su-compa%C3%B1ero-de-clase-con-el-casco-vr.jpg?s=612x612&w=0&k=20&c=E-GcAT-EgLmW0mQN6n5qba-C7IBEkb3OgQTIDywIglc="
                     alt="Imagen de biblioteca moderna"
                     class="w-100 h-100"
                     style="object-fit: cover;">
                <div class="image-overlay"></div>
            </div>
        </div>

        <!-- Lado derecho: Login -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="login-section w-100" style="max-width: 500px;">
                <div class="p-5">
                    <h2 class="text-center login-title">Iniciar Sesión</h2>

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger alert-modern alert-dismissible fade show" role="alert">
                            <p class="mb-0">@Model.Error</p>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" asp-controller="User" asp-action="Index">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label form-label-modern">Correo del usuario</label>
                            <input class="form-control form-control-modern" asp-for="Email" type="email" placeholder="usuario@ejemplo.com">
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label form-label-modern">Contraseña</label>
                            <input class="form-control form-control-modern" asp-for="Password" type="password" placeholder="********">
                        </div>

                        <div class="d-flex flex-column flex-sm-row justify-content-between gap-3">
                            <a asp-controller="User" asp-action="ForgotPassword" class="btn btn-warning-modern btn-modern">
                                Olvidé mi contraseña
                            </a>
                            <button type="submit" class="btn btn-primary-modern btn-modern">
                                Iniciar sesión
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>