                            <i class="fas fa-home"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Home" asp-action="DashboardUser">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Prestamo" asp-action="Index">
                            <i class="fas fa-calendar-check"></i>
                            <span>Préstamos y Devoluciones</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Reservas" asp-action="Index">
                            <i class="fas fa-bookmark"></i>
                            <span>Reservas</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Recomendaciones" asp-action="Index">
                            <i class="fas fa-thumbs-up"></i>
                            <span>Recomendaciones</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Catalogo" asp-action="Index">
                            <i class="fas fa-book"></i>
                            <span>Ver Catálogo</span>
                        </a>
                    </li>
                }

                if (isAdmi)
                {
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Home" asp-action="Dashboard">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Libro" asp-action="Index">
                            <i class="fas fa-book"></i>
                            <span>Libros</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Genero" asp-action="Index">
                            <i class="fas fa-tags"></i>
                            <span>Géneros</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Author" asp-action="Index">
                            <i class="fas fa-user-edit"></i>
                            <span>Autores</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Catalogo" asp-action="Index">
                            <i class="fas fa-list"></i>
                            <span>Catálogo</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="User" asp-action="Register">
                            <i class="fas fa-user-plus"></i>
                            <span>Registrar Usuarios</span>
                        </a>
                    </li>
                }

                if (isBiblotecario)
                {
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Reservas" asp-action="Index">
                            <i class="fas fa-calendar-check"></i>
                            <span>Administrar Reservas</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link" asp-area="" asp-controller="Catalogo" asp-action="Index">
                            <i class="fas fa-list"></i>
                            <span>Administrar Catálogo</span>
                        </a>
                    </li>
                }
            }
            else
            {
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link" asp-area="" asp-controller="Catalogo" asp-action="Index">
                        <i class="fas fa-book"></i>
                        <span>Catálogo</span>
                    </a>
                </li>
            }
        </ul>

        @if (User != null)
        {
            <!-- Dropdown del usuario logueado -->
            <div class="user-dropdown-sidebar">
                <div class="dropdown">
                    <button class="user-dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <span>Opciones de perfil</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-sidebar">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user-circle me-2"></i>Mi Perfil</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-area="" asp-controller="User" asp-action="LogOut"><i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        }
        else
        {
            <!-- Botones de autenticación -->
            <div class="sidebar-auth-buttons">
                <a class="btn btn-sidebar-auth" asp-area="" asp-controller="User" asp-action="Index">
                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                </a>
                <a class="btn btn-sidebar-auth" asp-area="" asp-controller="User" asp-action="Register">
                    <i class="fas fa-user-plus me-2"></i>Regístrate
                </a>
            </div>
        }
    </nav>

    <!-- Contenido principal -->
    <div class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>

