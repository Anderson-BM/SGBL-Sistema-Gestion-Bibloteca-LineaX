@using Microsoft.AspNetCore.Http
@using SGBL.Core.Application.Dtos.Account
@using SGBL.Core.Application.Helpers;
@using SGBL.Core.Application.ViewModels.User
@inject IHttpContextAccessor httpContextAccessor
@{
    //  ASIGNACIONES DE ROLES NECESARIOS
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    var isAdmi = User != null ? User.Roles.Any(r => r == "Admi") : false;
    var isBasic = User != null ? User.Roles.Any(r => r == "Basic") : false;
    var isBiblotecario = User != null ? User.Roles.Any(r => r == "Biblotecario") : false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGBL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SGBL.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <style>
        /* Estilos para el sidebar vertical */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 280px;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
            border-right: 3px solid #2563eb;
            z-index: 1000;
            overflow-y: auto;
            transition: all 0.3s ease;
        }

        /* Perfil de usuario en la parte superior del sidebar */
        .user-profile {
            padding: 2rem 1.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            margin-bottom: 1rem;
        }

        .user-profile-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(45deg, #ffd700, #ffed4e);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem auto;
            color: #333;
            font-weight: bold;
            font-size: 2rem;
            border: 4px solid rgba(255,255,255,0.3);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .user-profile-name {
            color: white;
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .user-profile-role {
            color: rgba(255,255,255,0.8);
            font-size: 0.9rem;
            background: rgba(255,255,255,0.1);
            padding: 0.3rem 0.8rem;
            border-radius: 15px;
            display: inline-block;
        }

        /* Título de la aplicación */
        .sidebar-brand {
            padding: 1.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.2);
            margin-bottom: 1rem;
        }

        .sidebar-brand-text {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            margin: 0;
        }

            .sidebar-brand-text i {
                margin-right: 0.5rem;
                color: #ffd700;
            }

        /* Navegación del sidebar */
        .sidebar-nav {
            padding: 0 1rem;
            list-style: none;
            margin: 0;
        }

        .sidebar-nav-item {
            margin-bottom: 0.5rem;
        }

        .sidebar-nav-link {
            display: flex;
            align-items: center;
            padding: 1rem;
            color: white !important;
            text-decoration: none;
            font-weight: 500;
            border-radius: 10px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .sidebar-nav-link:hover {
                background: rgba(255,255,255,0.2);
                transform: translateX(5px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.2);
                color: white !important;
            }

            .sidebar-nav-link i {
                width: 20px;
                text-align: center;
                margin-right: 1rem;
                font-size: 1.1rem;
            }

        /* Botones de autenticación */
        .sidebar-auth-buttons {
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.2);
            margin-top: auto;
        }

        .btn-sidebar-auth {
            width: 100%;
            background: linear-gradient(45deg, #ffd700, #ffed4e);
            border: none;
            color: #333;
            font-weight: 600;
            padding: 0.8rem;
            border-radius: 25px;
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
        }

            .btn-sidebar-auth:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(255,215,0,0.4);
                color: #333;
            }

        /* Dropdown del usuario logueado */
        .user-dropdown-sidebar {
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.2);
        }

        .user-dropdown-toggle {
            width: 100%;
            background: rgba(255,255,255,0.15);
            border: 2px solid rgba(255,255,255,0.3);
            border-radius: 25px;
            padding: 0.8rem 1rem;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .user-dropdown-toggle:hover {
                background: rgba(255,255,255,0.25);
            }

        .dropdown-menu-sidebar {
            width: 100%;
            margin-top: 0.5rem;
            border: none;
            border-radius: 10px;
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        /* Layout principal */
        .main-content {
            margin-left: 280px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1;
            padding: 2rem;
        }

        /* Toggle button para móviles */
        .sidebar-toggle {
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1001;
            background: linear-gradient(45deg, #ffd700, #ffed4e);
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            color: #333;
            font-size: 1.2rem;
            display: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

       

        /* Overlay para móviles */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 999;
            display: none;
        }

            .sidebar-overlay.show {
                display: block;
            }

        /* Footer styles (mantener los existentes) */
        .footer-library {
            background: linear-gradient(135deg, #4a6fa5 0%, #5a7fb8 100%);
            color: white;
            border-top: 4px solid #7fb3d3;
            position: relative;
            overflow: hidden;
        }

            .footer-library::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
